{
  "title": "basic",
  "description": "basic view definition",
  "resources": [
    {
      "id": "pt1",
      "name": [
        {
          "family": "F1"
        }
      ],
      "active": true
    },
    {
      "id": "pt2",
      "name": [
        {
          "family": "F2"
        }
      ],
      "active": false
    },
    {
      "id": "pt3"
    }
  ],
  "tests": [
    {
      "title": "basic attribute",
      "view": {
        "select": [
          {
            "column": [
              {
                "name": "id",
                "path": "id"
              }
            ],
            "type": "column"
          }
        ],
        "type": "select"
      },
      "expect": [
        {
          "id": "pt1"
        },
        {
          "id": "pt2"
        },
        {
          "id": "pt3"
        }
      ]
    },
    {
      "title": "boolean attribute with false",
      "view": {
        "select": [
          {
            "column": [
              {
                "name": "id",
                "path": "id"
              },
              {
                "name": "active",
                "path": "active"
              }
            ],
            "type": "column"
          }
        ],
        "type": "select"
      },
      "expect": [
        {
          "id": "pt1",
          "active": true
        },
        {
          "id": "pt2",
          "active": false
        },
        {
          "id": "pt3",
          "active": null
        }
      ]
    },
    {
      "title": "two columns",
      "view": {
        "select": [
          {
            "column": [
              {
                "name": "id",
                "path": "id"
              },
              {
                "name": "last_name",
                "path": "name.family.first()"
              }
            ],
            "type": "column"
          }
        ],
        "type": "select"
      },
      "expect": [
        {
          "id": "pt1",
          "last_name": "F1"
        },
        {
          "id": "pt2",
          "last_name": "F2"
        },
        {
          "id": "pt3",
          "last_name": null
        }
      ]
    },
    {
      "title": "two selects with columns",
      "view": {
        "select": [
          {
            "column": [
              {
                "name": "id",
                "path": "id"
              }
            ],
            "type": "column"
          },
          {
            "column": [
              {
                "name": "last_name",
                "path": "name.family.first()"
              }
            ],
            "type": "column"
          }
        ],
        "type": "select"
      },
      "expect": [
        {
          "id": "pt1",
          "last_name": "F1"
        },
        {
          "id": "pt2",
          "last_name": "F2"
        },
        {
          "id": "pt3",
          "last_name": null
        }
      ]
    },
    {
      "title": "where",
      "view": {
        "select": [
          {
            "column": [
              {
                "name": "id",
                "path": "id"
              }
            ],
            "type": "column"
          }
        ],
        "where": [
          {
            "path": "active=true"
          }
        ],
        "type": "select"
      },
      "expect": [
        {
          "id": "pt1"
        }
      ]
    },
    {
      "title": "where",
      "view": {
        "select": [
          {
            "column": [
              {
                "name": "id",
                "path": "id"
              }
            ],
            "type": "column"
          }
        ],
        "where": [
          {
            "path": "active=false"
          }
        ],
        "type": "select"
      },
      "expect": [
        {
          "id": "pt2"
        }
      ]
    },
    {
      "title": "where as element",
      "view": {
        "select": [
          {
            "column": [
              {
                "name": "id",
                "path": "id"
              }
            ],
            "type": "column"
          }
        ],
        "where": [
          {
            "path": "active"
          }
        ],
        "type": "select"
      },
      "expect": [
        {
          "id": "pt1"
        }
      ]
    },
    {
      "title": "where as expr - 1",
      "view": {
        "select": [
          {
            "column": [
              {
                "name": "id",
                "path": "id"
              }
            ],
            "type": "column"
          }
        ],
        "where": [
          {
            "path": "name.family = 'F2'"
          }
        ],
        "type": "select"
      },
      "expect": [
        {
          "id": "pt2"
        }
      ]
    },
    {
      "title": "where as expr - 2",
      "view": {
        "select": [
          {
            "column": [
              {
                "name": "id",
                "path": "id"
              }
            ],
            "type": "column"
          }
        ],
        "where": [
          {
            "path": "name.family = 'F1'"
          }
        ],
        "type": "select"
      },
      "expect": [
        {
          "id": "pt1"
        }
      ]
    },
    {
      "title": "where as name.family",
      "view": {
        "select": [
          {
            "column": [
              {
                "name": "id",
                "path": "id"
              }
            ],
            "type": "column"
          }
        ],
        "where": [
          {
            "path": "name.family"
          }
        ],
        "type": "select"
      },
      "expect": [
        {
          "id": "pt1"
        },
        {
          "id": "pt2"
        }
      ]
    }
  ]
}
