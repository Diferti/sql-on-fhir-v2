{
  "title": "forEach, forEachOrNull",
  "resources": [
    {
      "resourceType": "Patient",
      "id": "p1",
      "name": [
        {
          "use": "official",
          "family": "f1"
        }
      ],
      "contact": [
        {
          "gender": "other"
        }
      ]
    }
  ],
  "tests": [
    {
      "title": "forEach matching some",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "forEach": "name",
            "column": [{ "path": "family" }]
          }
        ]
      },
      "expect": [{ "family": "f1" }]
    },
    {
      "title": "forEach matching some, using $this",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "forEach": "name",
            "column": [{ "path": "$this.family", "alias": "family" }]
          }
        ]
      },
      "expect": [{ "family": "f1" }]
    },
    {
      "title": "forEach matching some, using $this",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "forEach": "name.family",
            "column": [{ "path": "$this", "alias": "family" }]
          }
        ]
      },
      "expect": [{ "family": "f1" }]
    },
    {
      "title": "forEach matching none",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "forEach": "nonmatching.selector",
            "column": [{ "path": "id" }]
          }
        ]
      },
      "expect": []
    },
    {
      "title": "forEachOrNull matching none",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "forEachOrNull": "nonmatching.selector",
            "column": [{ "path": "id" }]
          }
        ]
      },
      "expect": [{ "id": null }]
    }
  ]
}
