{
  "title": "union",
  "resources": [
    {
      "resourceType": "Patient",
      "id": "p1",
      "name": [
        {
          "use": "official",
          "family": "f1"
        }
      ],
      "contact": [
        {
          "name": { "family": "f2" }
        },
        {
          "name": { "family": "f3" }
        }
      ]
    }
  ],
  "tests": [
    {
      "title": "Union of names",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "union": [
              {
                "forEach": "name",
                "column": [{ "path": "family", "name": "family" }]
              },
              {
                "forEach": "contact.name",
                "column": [{ "path": "family", "name": "family" }]
              }
            ]
          }
        ]
      },
      "expect": [{ "family": "f1" }, { "family": "f2" }, { "family": "f3" }]
    },
    {
      "title": "Union with different internal column names",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "union": [
              {
                "forEach": "name",
                "column": [
                  { "path": "family", "name": "a" },
                  { "path": "{}", "name": "b" }
                ]
              },
              {
                "forEach": "contact.name",
                "column": [
                  { "path": "family", "name": "b" },
                  { "path": "{}", "name": "a" }
                ]
              }
            ]
          }
        ]
      },
      "expect": [
        { "a": "f1", "b": null },
        { "a": null, "b": "f2" },
        { "a": null, "b": "f3" }
      ]
    },
    {
      "title": "Union with mismatching branches",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "union": [
              {
                "column": [{ "path": "'a'", "name": "a" }]
              },
              {
                "column": [{ "path": "'b'", "name": "b" }]
              }
            ]
          }
        ]
      },
      "expectError": true
    },
    {
      "title": "Union with forEachOrNull",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "forEachOrNull": "badPath",
            "union": [
              {
                "column": [{ "path": "'a'", "name": "letter" }]
              },
              {
                "column": [{ "path": "'b'", "name": "letter" }]
              }
            ]
          }
        ]
      },
      "expect": [{ "letter": null }]
    },
    {
      "title": "Union of names with column",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "column": [{ "path": "'x'", "name": "common" }],
            "union": [
              {
                "forEach": "name",
                "column": [{ "path": "family", "name": "family" }]
              },
              {
                "forEach": "contact.name",
                "column": [{ "path": "family", "name": "family" }]
              }
            ]
          }
        ]
      },
      "expect": [
        { "common": "x", "family": "f1" },
        { "common": "x", "family": "f2" },
        { "common": "x", "family": "f3" }
      ]
    },
    {
      "title": "Union of names with column and select",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "column": [{ "path": "'x'", "name": "commonx" }],
            "select": [
              {
                "forEach": "contact.name",
                "column": [{ "path": "family", "name": "c_family" }]
              }
            ],
            "union": [
              {
                "forEach": "name",
                "column": [{ "path": "family", "name": "p_family" }]
              },
              {
                "forEach": "contact.name",
                "column": [{ "path": "family", "name": "p_family" }]
              }
            ]
          }
        ]
      },
      "expect": [
        {
          "commonx": "x",
          "c_family": "f2",
          "p_family": "f1"
        },
        {
          "commonx": "x",
          "c_family": "f3",
          "p_family": "f1"
        },
        {
          "commonx": "x",
          "c_family": "f2",
          "p_family": "f2"
        },
        {
          "commonx": "x",
          "c_family": "f3",
          "p_family": "f2"
        },
        {
          "commonx": "x",
          "c_family": "f2",
          "p_family": "f3"
        },
        {
          "commonx": "x",
          "c_family": "f3",
          "p_family": "f3"
        }
      ]
    }
  ]
}
